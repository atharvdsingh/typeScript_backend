generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id Int @id @default(autoincrement())
  username String @unique
  email String
  password String
  firstname String
  lastname String?
  todos todo[]
}
model todo{
  id Int @id @default(autoincrement())
  content String
  title String
  done Boolean @default(false)
  userId Int
  user Users @relation(fields: [userId],references: [id])
  

}
